{
  "name": "sendit",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "prod": "^1.0.1",
    "react-router-dom": "^5.2.0",
    "simple-peer": "^9.6.2",
    "socket.io": "^2.3.0"
  },
  "engines": {
    "node": "8.1.1",
    "npm": "5.0.3"
    },
  "scripts": {
    "client-install": "npm install --prefix sendit",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix sendit",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "postinstall": "cd ./sendit && npm start",
    "heroku-postbuild":      "NPM_CONFIG_PRODUCTION=false npm install --prefix client        && npm run build --prefix client"  
  }
}
